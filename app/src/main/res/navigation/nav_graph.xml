<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.virendra.cameramodule.screens.allRecording.AllRecordingsFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_all_recordings">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_playerActivity"
            app:destination="@id/playerActivity" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.virendra.cameramodule.screens.recording.RecordingFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_recording">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <activity
        android:id="@+id/playerActivity"
        android:name="com.virendra.cameramodule.screens.player.PlayerActivity"
        android:label="activity_player"
        tools:layout="@layout/activity_player" >
        <argument android:name="videoUri"
            app:argType="string"/>
    </activity>
</navigation>